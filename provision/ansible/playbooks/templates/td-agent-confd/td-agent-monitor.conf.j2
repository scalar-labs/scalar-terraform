<source>
  @type syslog
  port 5140
  tag system
  @label @local
</source>

# Receive logs from local Docker host
<source>
  @type forward
  port 24225
  bind 127.0.0.1
  @label @local
</source>

# Receive logs from remote td-agents
<source>
  @type forward
  port 24224
  @label @store
</source>

# Capture fluentd's own logs
<label @FLUENT_LOG>
  <match fluent.**>
    @type relabel
    @label @local
  </match>
</label>

# Add hostname field to local log records
<label @local>
  <filter **>
    @type record_transformer
    <record>
      hostname "#{Socket.gethostname}"
    </record>
  </filter>
  <match **>
    @type relabel
    @label @store
  </match>
</label>

<label @store>
  <match **>
    @type file
    path /log/${hostname}/%Y/%m-%d/${tag[0]}
    append true
    <buffer time,tag,hostname>
      @type file
      path /log/buffer
      timekey 1d
      timekey_wait 5m
      timekey_use_utc true
      flush_mode immediate
      flush_thread_count 8
      flush_at_shutdown true
    </buffer>
    <format>
      @type out_file
    </format>
  </match>
</label>

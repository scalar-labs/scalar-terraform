data "terraform_remote_state" "network" {
  backend = "azurerm"

  config = {
    storage_account_name = "exampletfstate"
    container_name       = "tfstate"
    key                  = "network/terraform.tfstate"
  }
}

data "terraform_remote_state" "kubernetes" {
  backend = "azurerm"

  config = {
    storage_account_name = "exampletfstate"
    container_name       = "tfstate"
    key                  = "kubernetes/terraform.tfstate"
  }
}
